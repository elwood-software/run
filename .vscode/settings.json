{
  "deno.enable": true,
  "deno.enablePaths": ["./"],
  "deno.lint": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "editor.tabSize": 2,
  "cSpell.words": [
    "deno",
    "supabase"
  ]
}
